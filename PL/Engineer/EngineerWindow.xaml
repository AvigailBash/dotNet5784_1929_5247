<Window x:Class="PL.Engineer.EngineerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Engineer"
        mc:Ignorable="d"
        Title="EngineerWindow" Height="450" Width="800"
        DataContext="{Binding engineer, RelativeSource={RelativeSource Self}, Mode=TwoWay}">

    <Window.Resources>
        <Style x:Key="myLabelStyle"
        TargetType="Label">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Height" Value="26" />
            <Setter Property="Width" Value="120" />
        </Style>
    </Window.Resources>
    <Grid>
        <Label Style="{StaticResource myLabelStyle}" Content="תז" HorizontalAlignment="Left" Margin="687,38,0,0" VerticalAlignment="Top"/>
        <Label Style="{StaticResource myLabelStyle}" Content="שם" Margin="687,95,44,298"/>
        <Label Style="{StaticResource myLabelStyle}" Content="מייל" HorizontalAlignment="Left" Margin="687,150,0,0" VerticalAlignment="Top"/>
        <Label Style="{StaticResource myLabelStyle}" Content="רמת מהנדס" HorizontalAlignment="Left" Margin="650,0,0,0" VerticalAlignment="Center"/>
        <Label Style="{StaticResource myLabelStyle}" Content="משכורת" HorizontalAlignment="Left" Margin="666,267,0,0" VerticalAlignment="Top"/>
        <Label Style="{StaticResource myLabelStyle}" Content="פעיל" HorizontalAlignment="Left" Margin="681,319,0,0" VerticalAlignment="Top"/>
        <Label Style="{StaticResource myLabelStyle}" Content="אחראי על משימה" HorizontalAlignment="Left" Margin="617,372,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="387,46,0,0" TextWrapping="Wrap" Text="{Binding id, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="387,95,0,0" TextWrapping="Wrap" Text="{Binding name, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="387,158,0,0" TextWrapping="Wrap" Text="{Binding email, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" VerticalAlignment="Top" Width="120"/>
        <ComboBox HorizontalAlignment="Left" Margin="387,208,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="387,262,0,0" TextWrapping="Wrap" Text="{Binding cost, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}" VerticalAlignment="Top" Width="120"/>
        <CheckBox Content="" HorizontalAlignment="Left" Margin="487,307,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="387,363,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="" HorizontalAlignment="Left" Margin="45,385,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.443,1.654" Width="105"/>


    </Grid>
</Window>
