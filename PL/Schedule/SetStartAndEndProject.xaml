<Window x:Class="PL.Schedule.SetStartAndEndProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Schedule"
        mc:Ignorable="d"
        Title="SetStartAndEndProject" Height="450" Width="800"
         DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid>
        <Label Content="Set start of project" HorizontalAlignment="Left" Margin="163,130,0,0" Style="{StaticResource myLabelStyle}" VerticalAlignment="Top" />
        <Label Content="Set end of project" HorizontalAlignment="Left" Margin="163,199,0,0"  Style="{StaticResource myLabelStyle}" VerticalAlignment="Top"/>
        <DatePicker SelectedDate="{Binding start}" HorizontalAlignment="Center" Margin="0,132,0,0" VerticalAlignment="Top"/>
        <DatePicker SelectedDate="{Binding end}" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top"/>
        <Button Content="Ok" HorizontalAlignment="Left" Margin="568,321,0,0" Style="{StaticResource myButtonStyle}" VerticalAlignment="Top" Click="SetDates"/>

    </Grid>
</Window>
