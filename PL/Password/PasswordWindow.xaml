<Window x:Class="PL.Password.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Password"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800"
         DataContext="{Binding User, RelativeSource={RelativeSource Self}, Mode=TwoWay}">
    <Grid>
        <Label Style="{StaticResource myLabelStyle}" Content="User Name" HorizontalAlignment="Left" Margin="178,103,0,0" VerticalAlignment="Top"/>
        <Label Style="{StaticResource myLabelStyle}" Content="Password" HorizontalAlignment="Left" Margin="178,180,0,0" VerticalAlignment="Top"/>
        <TextBox Style="{StaticResource myTextBoxStyle}" HorizontalAlignment="Left" Margin="400,103,0,0" TextWrapping="Wrap" Text="{Binding User.Id, Mode=OneWay}" VerticalAlignment="Top" Width="120"/>
        <TextBox Style="{StaticResource myTextBoxStyle}" HorizontalAlignment="Left" Margin="400,193,0,0" TextWrapping="Wrap" Text="{Binding User.Password, Mode=OneWay}" VerticalAlignment="Top" Width="120"/>
        <Button Style="{StaticResource myButtonStyle}" Content="Enter" HorizontalAlignment="Left" Margin="538,356,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
